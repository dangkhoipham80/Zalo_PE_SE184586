<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Zalo_PE_SE184586" parent="Theme.Material3.DayNight.NoActionBar">

    <!-- Primary colors - Zalo Blue -->
        <item name="colorPrimary">@color/zalo_blue</item>
        <item name="colorPrimaryVariant">@color/zalo_blue_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/zalo_blue_light</item>
        <item name="colorSecondaryVariant">@color/zalo_blue_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Surface & background -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Text appearance -->
        <item name="textAppearanceHeadline6">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MaterialComponents.Body2</item>
    </style>

</resources>
